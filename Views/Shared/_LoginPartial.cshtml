


<ul class="navbar-nav">

    @if (!String.IsNullOrEmpty(User.Identity.Name))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity">@User.Identity.Name</a>
        </li>
        <li class="nav-item">

            <a asp-action="logout" class="nav-link btn btn-link text-dark">Logout</a>

        </li>
    }
    else if (User.Claims.Any(a => a.Type == JwtRegisteredClaimNames.UniqueName))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity">@User.Claims.First(a => a.Type == JwtRegisteredClaimNames.UniqueName).Value</a>
        </li>
        <li class="nav-item">

            <a asp-action="logout" class="nav-link btn btn-link text-dark">Logout</a>

        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="login">Login</a>
        </li>
    }
</ul>
