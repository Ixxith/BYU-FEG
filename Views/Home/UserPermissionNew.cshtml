@{
}

@model UserPermission

<div class="text-center">
    <h1>
        @ViewBag.Title
    </h1>
    <div class="text-left">
        <form asp-action="UserPermissionNew" method="post">
            <!-- If this is a preexisting Quote, then we need to add a hidden field with the QuoteId so that we can update this record rather than make a new one-->
            @if (Model != null)
            {<input type="hidden" asp-for="Id" name="QuoteId" value="@Model.Id" />}
            <label class="col-form-label" asp-for="UserName">NetId</label>
            <input class="form-control" asp-for="UserName" />
            <label class="col-form-label" asp-for="IsResearcher">Give researcher role?</label>
            <input class="form-control" asp-for="IsAdmin" />
            <label class="col-form-label" asp-for="IsAdmin">Give admin role?</label>
            <br />
            <button type="submit" class="btn btn-dark">Submit</button>
            <br />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
